<BoxContainer
    xmlns="https://spacestation14.io"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:controls="clr-namespace:Content.Client._Umbra.SiliconLawUi"
    HorizontalExpand="True">
    <PanelContainer
        Margin="20 10 0 0"
        MinHeight="128"
        >
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="#1B1B1B"></graphics:StyleBoxFlat>
        </PanelContainer.PanelOverride>
        <BoxContainer Align="Begin" Margin="5 0 0 0">
            <Label Name="PositionText"></Label>
        </BoxContainer>
        <BoxContainer Align="Center" Margin="15 0 0 0" MinWidth="500">
            <TextEdit Name="LawContent" Editable="True" MinWidth="500" MinHeight="80"></TextEdit>
        </BoxContainer>
    </PanelContainer>
    <BoxContainer Orientation="Horizontal" Margin="0 5 0 0" MaxHeight="64" Align="End">
        <Button Name="MoveUp" Text="-1" StyleClasses="OpenRight"></Button>
        <Button Name="MoveDown" Text="+1" StyleClasses="OpenBoth"></Button>
        <Button Name="Delete" Text="Delete" StyleClasses="OpenLeft"></Button>
        <CheckBox Name="Corrupted" Text="Corrupted law" ToolTip="If the law identifier should be set as 'corrupted', so symbols shuffling around."></CheckBox>
    </BoxContainer>
</BoxContainer>
