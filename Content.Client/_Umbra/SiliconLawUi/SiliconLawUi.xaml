<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="Silicon Laws"
    MinSize="900 400"
    >
    <BoxContainer Orientation="Vertical">
        <Button Name="NewLawButton" Text="New law" MaxSize="128 64"></Button>
        <Button Name="Save" Text="Save changes" MaxSize="128 64" Access="Public"></Button>
    </BoxContainer>
    <BoxContainer Orientation="Vertical" Margin="4 60 0 0">
        <ScrollContainer VerticalExpand="True" HorizontalExpand="True" HScrollEnabled="False">
            <BoxContainer Orientation="Vertical" Name="LawContainer" Access="Public" VerticalExpand="True" />
        </ScrollContainer>
    </BoxContainer>
</controls:FancyWindow>
